:root {
	--cursor-normal: url({{'/images/ui/cursor.png' | url}});
	--cursor-pointer: url({{'/images/ui/cursor_pointer.png' | url}});

	--color-gold: #887849;
	--color-yellow: #dbb74f;
	--color-save-yellow: #c8b46e;
	--color-placeholder-input: #494744;
	--color-save-grey: rgb(177, 174, 167);
}


@font-face {
    font-family: 'constantiabold';
    src: url('{{"/fonts/constantia_bold-webfont.woff2" | url}}') format('woff2'),
         url('{{"/fonts/constantia_bold-webfont.woff" | url}}') format('woff');
    font-weight: normal;
    font-style: normal;

}

@font-face {
    font-family: 'constantiaregular';
    src: url('{{"/fonts/constantia_regular-webfont.woff2" | url}}') format('woff2'),
         url('{{"/fonts/constantia_regular-webfont.woff" | url}}') format('woff');
    font-weight: normal;
    font-style: normal;

}

.narrator-font {
	font-family: "constantiaregular", serif !important;
	font-style: italic;
}

/*styling scenes----------------------------------------------*/

#container {
	display: flex;
	width: 98vw;
	height: 95vh;
	flex-direction: column;
	justify-content: flex-start;

	background-color: black;
}

.main-title {
	font-family: "constantiabold", serif !important;
	font-size: 6rem;
	font-weight: normal;

	position: absolute;
	top: 34%;
	left: 50%; 

	transform: translate(-50%, -50%);
	text-wrap: nowrap;
	overflow: visible;

	z-index: 50;
}

.scene {
	position: relative;
	height: 99vh;
}

.options-button {
	background-image: url({{"/images/ui/menu_button.png"  | url}});
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;

	position: absolute;
	left: 0;
	top: 0;

	height: 50px;
	width: 50px;

	z-index: 60;
}

.panel {
	position: absolute;
	left: 0;
	right: 0;
	top: 20%;
	margin-left: auto;
	margin-right: auto;

	height: 50%;
	width: fit-content;
}

.close-modal-button {
	background-image: url({{"/images/ui/close_button_round.png"  | url}});

	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;
	height: 5%;
	width: 5%;

	position: absolute;

	right: calc(8% + (8% / 100));
	top: calc(11% + (11% / 19));
}
#popup {
	background-image: url({{"/images/ui/popup_panel.png"  | url}});
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;
	position: absolute;
	height: calc(50vw / 1.4);
	width: 36vw;
	z-index: 70;
	left: 0;
	right: 0;
	margin: auto;
	top: 0;
	bottom: 0;
}

.popup-container {
	overflow-y: scroll;

	position: absolute;
	top: 36%;
	left: 19%;
	width: 58%;
	height: 35%;
	padding: 0;
	margin: 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-evenly;
}
.popup-container > p {
	font-size: 150%;
	margin-bottom: 5%;
}

.popup-buttons-container {
	display: flex;
	flex-direction: row;
	justify-content: center;
	column-gap: 6%;
	width: 100%;
}

.popup-button {
	font-size: 150%;
	padding: 2.5% 5%;
}
.modal {
	position: absolute;
	margin-left: auto;
	margin-right: auto;

	background-size: 100% 100%;
	background-position: center;

	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 60;
}

.settings-area {
	background-image: url({{"/images/ui/menu_panel.png"  | url}});
	width: 60vw;
	height: calc(60vw / 1.2);
}

.settings-area > .close-modal-button {
	right: 11.55%;
	top: 12%;
}

.settings-container {
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;

	font-family: "constantiaregular", serif !important;
	color: var(--color-save-grey);
	font-weight: 300;
	font-size: 1.15rem;

	position: absolute;
	left: 25%;
	top: 28%;
	width: 50%;
	height: 50%;
}

.settings-row {
	display: flex;
	flex-direction: row;

	justify-content: space-between;
	align-items: center;
	max-height: 52px;
}

.settings-row.disabled {
	pointer-events: none;
}

.settings-row-info {
	cursor: not-allowed;
	filter: saturate(0);
}

.settings-content {
	width: 42%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.settings-content > span {
	flex-grow: 3;
	text-align: center;
}

.settings-icon {
	display: inline-block;
	width: 4em;
	height: 4em;

	margin: 0;
	padding: 0;

	background-size: cover;
	background-repeat: no-repeat;
}

.settings-button-increase {
	background-image: url({{"/images/ui/menu_right_arrow.png"  | url}});
}

.settings-button-increase:hover {
	background-image: url({{"/images/ui/menu_right_arrow_hover.png"  | url}});
}

.settings-button-increase.disabled,
.settings-row.disabled .settings-button-increase {
	filter: none;
	background-image: url({{"/images/ui/menu_right_arrow_disabled.png"  | url}});
}

.settings-button-increase.disabled:hover,
.settings-row.disabled .settings-button-increase:hover {
	background-image: url({{"/images/ui/menu_right_arrow_disabled_hover.png"  | url}});
}

.settings-button-decrease {
	background-image: url({{"/images/ui/menu_left_arrow.png"  | url}});
}

.settings-button-decrease:hover {
	background-image: url({{"/images/ui/menu_left_arrow_hover.png" | url}});
}
.settings-button-decrease.disabled,
.settings-row.disabled .settings-button-decrease {
	background-image: url({{"/images/ui/menu_left_arrow_disabled.png" | url}});
}
.settings-button-decrease.disabled:hover,
.settings-row.disabled .settings-button-decrease:hover {
	background-image: url({{"/images/ui/menu_left_arrow_disabled_hover.png" | url}});
}

.settings-checkbox {
	background-image: url({{"/images/ui/menu_checkbox_empty.png" | url}});
}
.settings-checkbox:hover {
	background-image: url({{"/images/ui/menu_checkbox_empty_hover.png" | url}});
}
.settings-checkbox.checked {
	background-image: url({{"/images/ui/menu_checkbox_checked.png" | url}});
}
.settings-checkbox.checked:hover {
	background-image: url({{"/images/ui/menu_checkbox_checked_hover.png" | url}});
}

.saves-area, .log-area {
	display: flex;
	flex-direction: column;

	background-image: url({{"/images/ui/saves_panel.png" | url}});

	width: 70vw; /* Adjust as needed */
	height: calc(70vw / 1.6); /* Maintain 1.4 aspect ratio */
}

.saves-area * {
	color: var(--color-save-yellow);
}

.saves-area[data-mode="load"] > h3::after {
	content: "Load Save";
}

.saves-area[data-mode="save"] > h3::after {
	content: "New Save";
}

.saves-area > h3, .log-area > h3 {
	font-family: "constantiabold", serif;
	font-style:italic;
	font-weight: normal;
	font-size: 230%;
	position: absolute;
	left: 13%;
	top: 16%;
}

.saves-container, .log-container {
	position: absolute;

	width: 78%;
	height: 70%;
	left: 10%;
	top: 25.5%;

	overflow-y: scroll;
	overflow-x: hidden;
	/* This sets the size of the scrollbar to 16px wide */
	scrollbar-width: 16px; /* Standard for Firefox and others */
}

@supports (-moz-appearance: none) {
	.saves-container, .log-container {
		scrollbar-color: #cf2400 #171717; /* thumb and track colors for browsers that support it */
	}
}

.saves-container::-webkit-scrollbar:hover,.log-container::-webkit-scrollbar:hover {
	cursor: var(--cursor-pointer), pointer;
}

/* Chrome, Edge, Safari and other WebKit/Blink browsers */
.saves-container::-webkit-scrollbar, .log-container::-webkit-scrollbar {
	width: 0.6vw; /* width of the scrollbar */
}

.saves-container::-webkit-scrollbar-track, .log-container::-webkit-scrollbar-track {
	background: url("{{"/images/ui/scroll_gutter.png" | url}}") repeat-y; /* Tiled image on the y axis */
	background-color: #171717; /* fallback color if the image is not loaded */
	background-size: contain;
	border: 1px solid #090909; /* border around the track */
}

.saves-container::-webkit-scrollbar-thumb, .log-container::-webkit-scrollbar-thumb {
	background-color: #464646; /* color of the thumb */
	border-radius: 25px;
	width: 15px;
}

.saves-container::-webkit-scrollbar-button , .log-container::-webkit-scrollbar-button {
	height: 5px; /* height of the arrow image */
	background-size: contain;
}

.saves-container::-webkit-scrollbar-button:vertical:decrement, .log-container::-webkit-scrollbar-button:vertical:decrement  {
	background-image: url("{{"/images/ui/scroll_arrow_top.png" | url}}"); /* turned arrow for the top */
}

.saves-container::-webkit-scrollbar-button:vertical:increment, .log-container:-webkit-scrollbar-button:vertical:increment  {
	background-image: url("{{"/images/ui/scroll_arrow_down.png" | url}}"); /* normal arrow for the bottom */
}

.save-wrapper {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;

	position: relative;

	width: 100%;
	height: 25%;
	margin-bottom: 1%;
}

.save-wrapper.inactive {
	pointer-events: none;
}

.save-wrapper:last-child() {
	margin-bottom: 0;
}

.saves-area[data-mode="load"] .save-wrapper[data-save="empty"] {
	display: none;
}

.save-background {
	background-image: url({{"/images/ui/saveslot.png" | url}});
	background-size: 100% 100%;
	width: 75%;
	height: 100%;

	position: relative;
}

.save-wrapper:hover .save-background,
.save-background:hover,
.save-wrapper.active .save-background {
	background-image: url({{"/images/ui/saveslot_hovered.png" | url}});
}

.save-preview {
	background-size: 100% 100%;
	background-position: center;

	width: 6.5vw;
}

.save-wrapper[data-save="empty"] .save-preview {
	background-image: url({{"/images/ui/empty_save.png" | url}});

	height: calc(6.5vw / 1.31);
}

.save-wrapper[data-save="empty"]:hover .save-preview,
.save-wrapper[data-save="filled"] .save-preview,
.save-wrapper[data-save="empty"].active .save-preview {
	background-image: url({{"/images/ui/filled_save.png" | url}});
	height: calc(6.5vw / 0.934);
}

.saves-area[data-mode="save"] .load-save-button {
	display: none;
}

.save-name-input {
	all: unset;
	position: absolute;

	font-family: "constantiabold", serif;
	font-size: 175%;

	color: var(--color-save-yellow) !important;

	top: 27%;
	left: 5%;
	width: 66%;
	height: calc(48% * 0.75);
	transform: scaleY(1.25);

	padding: 1%;
	padding-left: 3.4%;
}

.saves-area[data-mode="load"] .save-name-input {
	pointer-events: none;
}

.save-wrapper[data-save="empty"] .save-info-container {
	visibility: hidden;
}

.save-info-container {
	position: absolute;
	top: 0;
	left: 76%;
	display: flex;
	flex-direction: column;
	justify-content: center;

	height: 100%;
}

.save-info-container > p {
	margin: 0;
	padding: 0;
	color: var(--color-save-grey) !important;
}

.save-name-input::-webkit-input-placeholder {
	/* WebKit, Blink, Edge */
	color: var(--color-placeholder-input) !important;
}
.save-name-input:-moz-placeholder {
	/* Mozilla Firefox 4 to 18 */
	color: var(--color-placeholder-input) !important;
}
.save-name-input::-moz-placeholder {
	/* Mozilla Firefox 19+ */
	color: var(--color-placeholder-input) !important;
}
.save-name-input:-ms-input-placeholder {
	/* Internet Explorer 10-11 */
	color: var(--color-placeholder-input) !important;
}
.save-name-input::-ms-input-placeholder {
	/* Microsoft Edge */
	color: var(--color-placeholder-input) !important;
}

.save-name-input::placeholder {
	/* Most modern browsers support this now. */
	color: var(--color-placeholder-input) !important;
}

.save-name-input:focus,
.save-name-input:focus-within {
	outline: none;
	color: var(--color-save-yellow) !important;
}

.save-button {
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;
	height: 30%;

	width: 4%;
}

.save-wrapper[data-save="empty"] .delete-save-button {
	visibility: hidden;
}

.save-wrapper.active .delete-save-button {
	visibility: visible;
}

.delete-save-button {
	background-image: url({{"/images/ui/close_button.png" | url}});
}

.save-wrapper:not(.active) .confirm-save-button {
	visibility: hidden;
}

.confirm-save-button {
	background-image: url({{"/images/ui/ok_button.png" | url}});
}

.log-container {
	padding-right: 1%;
}

.log-entry {
	margin-bottom: 1em;
}
.log-entry-action {
	color:#918b8b;
}

.choice-area {
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	align-items: center;
	height: 60%;
	top: 7%;
	z-index: 60;
	background-size: 100% 100%;
  background-position: 0px 0px;
  background-image: radial-gradient(#000 0%, #71C4FF00 80%);
  width: 100%;
}

.choice-button {
	padding: 1rem 2rem;

	font-family: "constantiabold", serif !important;
	font-style: italic;
	font-size: 3rem;
}

.characters {
	/*background-image: url({{"/images/backgrounds/placeholder.png" | url}});*/
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;

	position: absolute;
	left: 0;
	right: 0;
	margin-left: auto;
	margin-right: auto;

	width: 100%;
	height: 100%;
}

.characters-sprites {
	position: absolute;
	right: 0;
	left: 0;
	width: 90%;
	height: 100%;

	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	align-items: flex-end;

	margin-left: auto;
	margin-right: auto;
}

.sprite {
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;

	height: 89%;
	width: 30%;
}

.sprite:not(.talking) {
	height: 81%;
	filter: brightness(0.8);
}

.animated-sprite.talking {
	animation: vibrating-talking 200ms linear 0ms 2 normal both;
}

.dismas-neutral {
	background-image: url({{"/images/characters/dismas/neutral.png" | url}});
}

.talk-area {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0px;
	margin-left: auto;
	margin-right: auto;

	height: 32%;
	width: 100%;

	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;

	z-index: 55;

	background: rgb(0,0,0);
background: linear-gradient(0deg, rgb(0, 0, 0) 27%, rgba(0, 0, 0, 0.79) 60%, rgba(0, 0, 0, 0) 100%);

}
.talk-area > * {
	margin-left: auto;
}

.talkbox {
	background-size: 100% 100%;
	background-position: center;
	height: 100%;
	width: 65%;

	display: flex;
	justify-content: center;
	align-items: center;

	position: relative;
}


.talkbox-nextbutton {
	background-image: url({{"/images/ui/next_icon.png" | url}});
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;
	position: absolute;
	right: -2%;
  	bottom: 0;
    height: 16%;
    width: 8%;

	padding: 0;
	margin: 0;
	z-index: 50;
}

.talkbox-textinput {
	display: flex;
	flex-direction: row;
	align-items: center;

	column-gap: 1rem;
}

.talkbox-textinput > button {
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;

	height: 50px;
	width: 50px;
}

#talkbox-text-input {
	color: var(--color-yellow);

	display: block;
	border: none;
	padding: 0;
	width: 22.5ch;
	background: repeating-linear-gradient(
			90deg,
			var(--color-gold) 0,
			var(--color-gold) 1ch,
			transparent 0,
			transparent 1.5ch
		)
		0 100%/22ch 2px no-repeat;
	font: 2.5rem "ubuntu-mono-regular", monospace !important;
	letter-spacing: 0.5ch;
}

#talkbox-text-input::-webkit-input-placeholder {
	/* WebKit, Blink, Edge */
	color: var(--color-gold) !important;
}
#talkbox-text-input:-moz-placeholder {
	/* Mozilla Firefox 4 to 18 */
	color: var(--color-gold) !important;
}
#talkbox-text-input::-moz-placeholder {
	/* Mozilla Firefox 19+ */
	color: var(--color-gold) !important;
}
#talkbox-text-input:-ms-input-placeholder {
	/* Internet Explorer 10-11 */
	color: var(--color-gold) !important;
}
#talkbox-text-input::-ms-input-placeholder {
	/* Microsoft Edge */
	color: var(--color-gold) !important;
}

#talkbox-text-input::placeholder {
	/* Most modern browsers support this now. */
	color: var(--color-gold) !important;
}

input#talkbox-text-input:focus,
input#talkbox-text-input:focus-within {
	outline: none;
	color: white;
}

#random-textinput-button {
	background-image: url({{"/images/ui/random_button.png" | url}});
}

#confirm-textinput-button {
	background-image: url({{"/images/ui/ok_button.png" | url}});
}

.talkbox-nametag {
	height: fit-content;

	position: absolute;
	top: 7%;
    left: -9%;

	padding: 0.5rem 1rem;
	margin: 0;

	font-family: "constantiabold", serif !important;
	font-weight: bold;
font-style: italic;
	
	text-shadow: 0 0 1px black; /* Adds a subtle blur effect */
  	filter: blur(0.8px); /* Applies a slight blur to make it look less sharp */
  -webkit-font-smoothing: none; /* Turns off font smoothing for a pixelated look */
  -moz-osx-font-smoothing: grayscale; /* Makes it more pixelated on macOS */
  font-size: 220%
}

.talkbox-area {
	position: absolute;
	top: 40%;

	overflow: hidden;

	display: flex;
	flex-direction: column;

	width: 100%;
	row-gap: 1rem;
	height: 100%;
}

.talkbox-area > * {
	margin: 0;
	padding: 0;
}

#line {
	font-size: 1.85vw;
	align-self: flex-start;
	line-height: 1.3;
	
}

#line span {
	animation: letterSlide 0.15s linear 0s 1 normal forwards; /*figure it out LATER i guess*/
	
	
}

.text-yellow {
	color: var(--color-yellow);
}

.text-red {
	color: #cf2400
}

.text-pink {
	color: pink;
}

#input-textbox-panel + #line {
	padding-bottom: 0;
}

.talkbox-side-menu {
    height: 100%;
    width: fit-content;
    align-self: flex-end;
}

.talkbox-menu-list {
	list-style-type: none;
	list-style-position: inside;

	display: flex;
	flex-direction: column;
	justify-content: center;

	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;

}

.talkbox-menu-item {
	font-family: "constantiabold", serif !important;
	font-size: 150%;

	display: flex;
	justify-content: right;
	align-items: center;

	flex-grow: 1;

	height: fit-content;
}

.talkbox-menu-item > p {
	padding: 0 1rem;
	margin: 0;
}

/*ui elements*/

.image-panel {
	background-size: 100% 100%;
	background-position: center;
	background-repeat: no-repeat;
}

button {
	all: unset;
	background-color: none;
	border: none;

	cursor: var(--cursor-pointer), auto !important;
}

button:not(.settings-icon):active {
	border: none;
	margin: 0;
	filter: brightness(2);
}

button * {
	cursor: inherit !important;
}

/*UTIL=====================================================*/

button:active {
	border: none;
	border-style: unset;
}

button:not(.settings-icon).disabled,
button.disabled * {
	cursor: not-allowed !important;
	filter: grayscale(1) brightness(0.5) !important ;

}

.enabled:not(.settings-icon) {
	cursor: var(--cursor-pointer), pointer !important;
}

.enabled:not(.settings-icon):hover {
	filter: brightness(1.6) var(--filter);
}

.overlay {
	position: absolute;
	top: 0;
	left: 0;

	height: 100vh;
	width: 99vw;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 56;

	pointer-events: none;
	backdrop-filter: blur(1.5px);
}

/*STYLING DEFAULT SITE---------------------------------------------------------*/

body {
	font-family: "constantiaregular", serif;
	font-size: 1vw;

	height: 100%;
	overflow-y: hidden;

	color: white;
	background-color: black;
}

body * {
	cursor: var(--cursor-normal), auto ;
}

hr {
	width: 100%;
	color: white;
}

.title {
	display: inline;
	padding: 0;
	margin: 0;
}

.nav-container {
	display: inline-block;
	width: fit-content;
}

.nav-links {
	display: flex;
	flex-direction: row;
	flex-flow: row;
	justify-content: stretch;

	list-style-type: none;
	list-style-position: inside;

	margin: 0;
	padding: 0;
}

.nav-links > li {
	display: inline-block;

	background-color: black;

	border: white 1px solid;

	padding: 0.2rem 0.5rem;
}

.nav-links > li:hover {
	cursor: var(--cursor-pointer), auto;
	filter: brightness(1.5);
}

.nav-link {
	padding: 1rem;
}

.nav-link > a {
	height: 100%;
	width: 100%;
}

a {
	color: inherit;
	text-decoration: none;
}

a:visited {
	color: inherit;
}

a:active {
	color: inherit;
}

p, button {
	text-shadow: 0 0 1px black; /* Adds a subtle blur effect */
	--filter: blur(0.8px);
  	filter: blur(0.8px); /* Applies a slight blur to make it look less sharp */
	font-smoothing: never;
  -webkit-font-smoothing: none; /* Turns off font smoothing for a pixelated look */
  -moz-osx-font-smoothing: grayscale; /* Makes it more pixelated on macOS */
}

.toggle {
	display: none !important;
}




#spinner {

	z-index: 9999;
    position: absolute;
    width: 80px;
    height: 80px;
    background-color: black;
    transform: rotate(45deg);
